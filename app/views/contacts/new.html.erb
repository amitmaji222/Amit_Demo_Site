<div class= "container">
  <h3 class="text-center">Contact us</h3>
  <!-- It is a HTML of doing a form field
  <form>
    <label>Name</label>
    <input type="text">
    <br>
    <label>Email</label>
    <input type="text">
    <br>
    <label>Comments</label>
    <input type="text">
    <br>
    <input type="submit">
  </form>
  -->
  <!--Now starts the Rails way of Form field-->
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="well">
          <%= form_for "/contacts" do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class:'form-control' %>
            </div> 
            
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class:'form-control' %>
            </div>
            
            <div class="form-group">  
              <%= f.label :comments %>
              <%= f.text_area :comments, class:'form-control' %>
            </div>
            
            <div class="form-group">  
              <%= f.submit 'Submit', class:'btn btn-default' %>
            </div>  
          
          <% end %>
        </div>
    </div>
  </div>
</div>